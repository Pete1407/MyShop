    <style name="Theme.MyShop.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/bg_border_edittext</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ChoiceGender">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:checked">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/selector_bg_check_gender</item>
    </style>

    <style name="NormalText" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="NormalText.Green">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <style name="NormalText.Pink">
        <item name="android:textColor">@color/colorThemePink</item>
    </style>



</resources>