<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_nature"
    android:layout_marginVertical="@dimen/spacing_xs"
    android:layout_marginHorizontal="@dimen/spacing_small"
    android:longClickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.example.myshop.customview.NormalTextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:typeText="@string/text_bold"
        tools:text="Marshall D Teach"/>

    <com.example.myshop.customview.NormalTextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_margin="6dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_tag_place"
        tools:text="@string/home"/>

    <com.example.myshop.customview.NormalTextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:textSize="11sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/fullName"
        app:layout_constraintStart_toStartOf="parent"
        app:typeText="@string/text_normal"
        tools:text="8 mile in Detroit, 15555"/>

    <com.example.myshop.customview.NormalTextView
        android:id="@+id/zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintStart_toStartOf="parent"
        app:typeText="@string/text_normal"
        tools:text="1735"/>
</androidx.constraintlayout.widget.ConstraintLayout>